<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>{% block title %}Welcome!{% endblock %}</title>
  </head>
  <body>
    <header>
        <div class="mx-auto" style="width: 200px; padding: 30px 0;">
            <p class="h1">My articles</p>
        </div>
    </header>
    <div class="container">
        <div class="row">
            {% block body %}{% endblock %}
            <div class="col-sm-4">
                {% block sidebar %}
                    {{ render(controller('App\\Controller\\ArticleController::sidebar', { 'numberOfArticles': 10 })) }}
                {% endblock %}
            </div>
        </div>
    </div>
    <footer style="padding: 50px 0;">
        <p class="text-center">Tracking code from twig globals: {{ tracking_code }}</p>
    </footer>
  </body>
</html>
