{% extends 'base.html.twig' %}

{% block title %}Add an article{% endblock %}

{% block body %}
<div class="col-sm-8">
    {{ form_start(form) }}

    <h5>New article</h5>
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.datePublished) }}

    <h5>Authors</h5>
    <ul class="authors" data-prototype="{{ form_widget(form.authors.vars.prototype)|e('html_attr') }}">
    </ul>
    {{ form_end(form) }}
</div>
{% endblock %}
